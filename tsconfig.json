{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "sourceMap": true,
        "lib": ["esnext", "es2018", "dom"],
        "isolatedModules": true,
        "types": ["node", "jest"],
